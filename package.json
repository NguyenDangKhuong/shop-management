  "author": {
    "name": "Khuong",
    "url": "https://github.com/NguyenDangKhuong"
  },
  "engines": {
    "node": "22.x"
  },
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build-ananalyzer": "ANALYZE=true yarn build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write \"./**/*.{ts,tsx,json}\"",
    "test": "jest",
    "test:perf": "lighthouse http://localhost:3000 --only-categories=performance --output=html --output-path=./lighthouse-reports/report-$(date +%Y%m%d-%H%M%S).html --view",
    "test:perf:json": "lighthouse http://localhost:3000 --only-categories=performance --output=json --output-path=./lighthouse-reports/report.json --quiet && node scripts/parse-lighthouse.js",
    "test:perf:ci": "lighthouse http://localhost:3000 --only-categories=performance --output=json --output-path=./lighthouse-reports/report.json --chrome-flags=\"--headless\" --quiet",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@ant-design/cssinjs": "^1.18.0-alpha.5",
    "@vercel/analytics": "^1.5.0",
